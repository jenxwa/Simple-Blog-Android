<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_blog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            tools:text="Title of the Blog Post" />

        <LinearLayout
            android:id="@+id/detail_blog_chip_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            tools:layout_height="20dp" />

        <TextView
            android:id="@+id/detail_blog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="#555555"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed commodo..." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/detail_blog_apply_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Apply to replace this person"
            app:backgroundTint="@color/c24_blue"
            app:cornerRadius="80dp"
            app:strokeColor="@color/c24_blue"
            app:elevation="2dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
